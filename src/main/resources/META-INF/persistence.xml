<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Hibernate" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.divine.main.User</class>
        <class>com.divine.main.Company</class>
        <class>com.divine.main.Departament</class>
        <class>com.divine.main.Headquoter</class>
        <class>com.divine.main.School</class>
        <class>com.divine.main.Children</class>
        <class>com.divine.main.Owner</class>
        <class>com.divine.main.Car</class>
        <class>com.divine.main.Customer</class>
        <class>com.divine.main.Task</class>
        <class>com.divine.main.Staff</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/exchanger?useUnicode=true&amp;characterEncoding=UTF-8" />
            <property name="hibernate.connection.driver-class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.username" value="root" />
            <property name="hibernate.connection.password" value="1" />
            <property name="hibernate.archive.autodetection" value="true" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
        </properties>

    </persistence-unit>

</persistence>